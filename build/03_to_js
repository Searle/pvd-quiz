#!/usr/bin/perl

# usage: ./03_to_js.pl > pvd-quiz-data.js

use Data::Dumper;

{
    open FIN,  "<:encoding(cp1252)", "QUIZ4.txt" or die;
    local $/; $data= <FIN>;
    close FIN;
}

%q= {};

$data =~ s/^[ ]+/\n/gm;
$data =~ s/^-[ ]+/\n-/gm;
$data =~ s/^#(.*?)$/\n#$1\n/gm;
$data =~ s/^#[-=](.*?)$/\n/gm;
$data =~ s/\n(?!\n)/ /g;
$data =~ s/^\s+//gm;
$data =~ s/[ ][ ]+/ /g;

for (split(/\n/, $data)) {
    if (/^#(.)(\S+)\s+(.*)/) {

        ($type, $no, $author)= ($1, $2, $3);

        if ($type eq 'Q') {
            $q{$no}= [[ $type, $author, [] ]];
        }
        else {
            die "Antwort auf nicht existierende Frage: $type$no\n: $_" unless $q{$no};

            push @{ $q{$no} }, [ $type, $author, [] ];
        }
        next;
    }

    $ctype= s/^([-])\s*// ? $1 : undef;
    push @{ @{ $q{$no} }->[-1][2] }, [ $ctype, $_ ];
}

for (keys %q) {
    next unless @#{ $q{$_} };
    print "Keine Antwort auf for $_!\n" if @#{ $q{$_} };
    $err= 1;
}
die if $err;

use JSON::XS;

$json= encode_json(\%q);
$json =~ s/(\"\d+[A-H]?\":)/\n$1/g;

print "var quiz=$json;";
